<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/estm"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/estm_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/estm_logo"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="TODO" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="EST Meknes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/blue">

            <ImageView
                android:id="@+id/btn_present"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/baseline_home_24"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="TODO" />
            <ImageView
                android:id="@+id/btn_departement"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:padding="7dp"
                android:src="@drawable/workload_icon"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:contentDescription="TODO" />
            <ImageView
                android:id="@+id/btn_formation"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_school_24"
                android:padding="7dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="TODO" />
            <ImageView
                android:id="@+id/btn_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:src="@drawable/baseline_contact_page_24"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="TODO" />

        </LinearLayout>
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/txt_present"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleTextView"
                        style="@style/TitleMainStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Présentation de l'ESTM" />
                    <TextView
                        android:id="@+id/estmInfoTextView"
                        style="@style/TexteMainStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="8dp"
                        android:text="L'École Supérieure de Technologie de Meknès est un établissement d'enseignement supérieur universitaire technique, à vocation professionnalisante. L'ESTM forme des techniciens supérieurs hautement qualifiés dans les domaines du génie électrique, génie informatique, de la gestion, de la communication et de la commercialisation. La qualité de son encadrement et de ses équipements lui permet de doter le futur technicien d'une formation opérationnelle ouverte sur la vie professionnelle."
                        app:autoSizeStepGranularity="50dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />
                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/icon_enseignant"
                            android:src="@drawable/etudiant"
                            android:background="@drawable/etudiantjp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            >
                        </com.google.android.material.imageview.ShapeableImageView>

                        <TextView
                            android:id="@+id/etudiant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Etudiant"
                            style="@style/ImageCaptionStyle"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/alki"
                            android:src="@drawable/recherche"
                            android:background="@drawable/etudiantjp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            >
                        </com.google.android.material.imageview.ShapeableImageView>

                        <TextView
                            android:id="@+id/icon_recherche"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="18dp"
                            android:text="Recherche Scienctifique"
                            android:gravity="center"
                            style="@style/ImageCaptionStyle"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/alkin"
                            android:src="@drawable/biblio"
                            android:background="@drawable/etudiantjp"
                            android:layout_height="100dp"
                            android:layout_width="100dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            >
                        </com.google.android.material.imageview.ShapeableImageView>

                        <TextView
                            android:id="@+id/icon_recherchen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="18dp"
                            android:text="Bibiliothéque"
                            android:gravity="center"
                            style="@style/ImageCaptionStyle"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/icon_etudiant"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/etudiantjp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/enseignant"
                            app:shapeAppearanceOverlay="@style/roundedImageView"></com.google.android.material.imageview.ShapeableImageView>

                        <TextView
                            android:id="@+id/enseigt"
                            style="@style/ImageCaptionStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="Corps enseignant" />
                    </LinearLayout>
                </LinearLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/txt_departement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Departements"
                        android:textSize="40sp"
                        android:background="@color/blue"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DSIC"
                        android:textSize="30sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/txt_formation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Formation"
                        android:textSize="40sp"
                        android:background="@color/blue"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/btn_dut"
                        android:layout_width="match_parent"
                        android:layout_height="82dp"
                        android:clickable="true"
                        android:contentDescription="TODO"
                        android:padding="0dp"
                        android:src="@drawable/dut_estm" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DUT"
                        android:textSize="30sp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="La formation à l'ESTM est de type technique professionnalisme, organisé en quatre semestre sur une durée de deux années, sanctionné par le Diplome Universitaire de Technologie (DUT)."
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/btn_lp"
                        android:layout_width="wrap_content"
                        android:layout_height="94dp"
                        android:clickable="true"
                        android:contentDescription="TODO"
                        android:padding="0dp"
                        android:src="@drawable/lp_estm" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LP"
                        android:gravity="center"
                        android:textSize="30sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/LP"
                        android:gravity="center"
                        android:textSize="20sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/txt_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contacts"
                        android:textSize="40sp"
                        android:background="@color/blue"
                        android:textColor="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_margin="5dp">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/phone"
                                    android:contentDescription="TODO" />
                                <TextView
                                    android:id="@+id/btn_tel"
                                    android:clickable="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+212 5 35 46 70 84/86"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_margin="5dp">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/email"
                                    android:contentDescription="TODO" />
                                <TextView
                                    android:id="@+id/btn_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="estm@est-umi.ac.ma"
                                    android:clickable="true"
                                    android:autoLink="email"/>
                            </LinearLayout>
                            <TextView
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Km 5, Rue d'Agouray, N6, Meknes 50040, Morocco"
                                android:autoLink="web"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_margin="10dp">
                                <ImageView
                                    android:id="@+id/btn_fb"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/facebook_icon"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?selectableItemBackgroundBorderless"
                                    android:contentDescription="TODO" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Facebook"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_margin="10dp">
                                <ImageView
                                    android:id="@+id/btn_ig"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/instagram_icon"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?selectableItemBackgroundBorderless"
                                    android:contentDescription="TODO" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Instagram"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_margin="10dp">
                                <ImageView
                                    android:id="@+id/btn_yt"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/youtube_icon"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?selectableItemBackgroundBorderless"
                                    android:contentDescription="TODO" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Youtube"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_margin="10dp">
                                <ImageView
                                    android:id="@+id/btn_tw"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/twitter_icon"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?selectableItemBackgroundBorderless"
                                    android:contentDescription="TODO" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Twitter"/>
                            </LinearLayout>

                        </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>